[Unit]
Description=Tvault contego
After=openstack-nova-compute.service
StartLimitIntervalSec=120
StartLimitInterval=120
StartLimitBurst=3

[Service]
User=nova
Group=nova
Type=simple
ExecStart=<%= @contego_python+" "+@contego_bin+" "+@config_files %>
TimeoutStopSec=20
KillMode=process
Restart=on-failure
[Install]
WantedBy=multi-user.target
